{
  "name": "smart-helpdesk",
  "version": "1.0.0",
  "description": "AI-Powered IT Ticketing System with Premium UI/UX",
  "author": "Capstone Project",
  "license": "MIT",
  "scripts": {
    "setup": "npm install --prefix server && npm install --prefix client",
    "seed": "npm run seed --prefix server",
    "server": "npm run dev --prefix server",
    "client": "npm run dev --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build": "npm run build --prefix client"
  },
  "keywords": [
    "helpdesk",
    "ticketing",
    "mern",
    "nlp",
    "ai",
    "framer-motion",
    "tailwind"
  ],
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
